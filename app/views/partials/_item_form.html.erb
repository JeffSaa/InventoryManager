<%= form_for @item do |f| %>

	<div class="row">

		<div class="input-field col s6">
			<%= f.text_field :name, id: "name", class: "validate" %>
    		<%= f.label "Name", for: "name" %>
        </div>
        <div class="input-field col s6">
			<%= f.text_field :description, id: "description", class: "validate" %>
    		<%= f.label "Description", for: "description" %>
        </div>
        <div class="input-field col s6">
			<%= f.number_field :quantity, id: "quantity", class: "validate", min: 0 %>
			<%= f.label "Quantity", for: "quantity" %>
        </div>

        <div class="input-field col s12">
			<%= f.submit class: "waves-effect waves-light btn" %>
        </div>

	</div>

<% end %>